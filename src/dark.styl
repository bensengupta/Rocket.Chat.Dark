// Add dividers between messages similar to the date dividers.
.rc-old .message
	margin-top 40px

	.message-actions
		bottom 4px
		top auto

	&::after
		border-top 1px solid lighten(chat-bg, 5%)
		content: " ";
		display: block;
		left: 0;
		pointer-events: none;
		position: absolute;
		top: -20px;
		width: 100%;

	&.sequential
		padding-top 0
		margin-top 0

		&::after
			display none

		.message-actions
			bottom auto
			top 0

