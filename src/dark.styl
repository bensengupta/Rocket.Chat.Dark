	&.first-unread
		// Adjust to account for new border and margin.
		.body::before
			background-color highlight-color
			top -20px

		.body::after
			background-color chat-bg
			color highlight-color
			top -25px

	&.first-unread.sequential
		margin-top 10px

		.body::before
			top -6px

		.body::after
			top -12px

